.projects#projects
  .container
    .projects__wrap  
      h2.title.title_h1 Projects
      p.title.title_subtitle Validator 
        span rekt
        |DAO is our 
        span sub
        |DAO. You can delegate network <br> tokens to our validator rektDAO and thus support us
      
      .projects__filter 
        p SORT BY
          span apr
            svg(width="8", height="12", viewBox="0 0 8 12", fill="none", xmlns="http://www.w3.org/2000/svg")
              path(d="M4.35355 0.646446C4.15829 0.451184 3.84171 0.451184 3.64645 0.646446L0.464466 3.82843C0.269203 4.02369 0.269203 4.34027 0.464466 4.53553C0.659728 4.7308 0.97631 4.7308 1.17157 4.53553L4 1.70711L6.82843 4.53553C7.02369 4.7308 7.34027 4.7308 7.53553 4.53553C7.7308 4.34027 7.7308 4.02369 7.53553 3.82843L4.35355 0.646446ZM4.5 12L4.5 1L3.5 1L3.5 12L4.5 12Z")

      .projects__inner  
      
        each item in projects
          
          .projects__col  
            .projects__item  
              
              .projects__logo 
                img(src="images/dist/"+item.logo, alt="")

              .projects__info
                .projects__info-top
                  .projects__top-count=item.count1
                  
                  div
                    .projects__name=item.name
                    .projects__status MainNet


                .projects__info-bottom
                  .projects__bottom-counts
                    .projects__bottom-counts-item
                      span voting power
                      p=item.count2
                    .projects__bottom-counts-item
                      span APR
                      p=item.count3
                    .projects__bottom-counts-item
                      span selfbounded
                      p=item.count4
                    .projects__bottom-counts-item
                      span fee
                      p=item.count5
                  .projects__controls 
                    a(href="#").btn STAKE NOW 
                    a(href="#").btn EXPLORER
                    a(href="#").btn AUTOCOMPOUND
